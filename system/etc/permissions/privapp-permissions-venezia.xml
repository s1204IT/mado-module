<?xml version="1.0" encoding="utf-8"?>
<permissions>
    <privapp-permissions package="com.amazon.venezia">
        <permission name="android.permission.DELETE_PACKAGES"/>
        <permission name="android.permission.INSTALL_PACKAGES"/>
        <permission name="android.permission.PACKAGE_USAGE_STATS"/>
        <permission name="android.permission.READ_LOGS"/>
        <permission name="android.permission.REAL_GET_TASKS"/>
    </privapp-permissions>

    <privapp-permissions package="com.amazon.device.messaging">
        <permission name="android.permission.INTERACT_ACROSS_USERS"/>
        <permission name="android.permission.INTERACT_ACROSS_USERS_FULL"/>
        <permission name="android.permission.MANAGE_USERS"/>
        <permission name="android.permission.CHANGE_DEVICE_IDLE_TEMP_WHITELIST"/>
        <permission name="android.permission.PACKAGE_USAGE_STATS"/>
    </privapp-permissions>

    <!-- Opt Amazon AppStore out of Doze so it can update apps during Doze. -->
    <allow-in-power-save package="com.amazon.venezia" />

    <!-- Opt Amazon Device Messaging out of Doze so it can handle push notifications during Doze. -->
    <allow-in-power-save package="com.amazon.device.messaging" />

    <library name="com.amazon.device.messaging"
        file="/system/framework/com.amazon.device.messaging.jar" />
</permissions>
